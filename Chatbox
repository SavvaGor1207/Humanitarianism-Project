def send():
    send = "You -> " + e.get()
    txt.insert(END, "\n" + send)
    
    user = e.get()
     #Use AI for chat box
    if (user == "Hello" or user == "Hi" or user == "Hey"):
        txt.insert(END, "\n" + "Bot -> Hi, how was your day?")
 
    elif (user == "I had a good day." or user == "I had a great day"):
        txt.insert(END, "\n" + "Bot -> I'm glad you had a good day.\nBot -> What time of day is it?")

    elif (user == "I had a bad day."):
        txt.insert(END, "\n" + "Bot -> I'm sorry you had a bad day. I hope it gets better.\nBot -> What time of day is it? ")
 
    elif (user == "Morning"):
        txt.insert(END, "\n" + "Bot -> Did you have breakfast")

    elif (user == "Afternoon"):
        txt.insert(END, "\n" + "Bot -> Did you have lunch?")

    elif (user == "Evening"):
        txt.insert(END, "\n" + "Bot -> Did you have dinner?")

    elif (user == "No, I didn't have lunch." or user == "No, I didn't have dinner." or user == "No, I didn't have breakfast."):
        txt.insert(END, "\n" + "Bot -> You should go eat now.")

    elif (user == "Yes, I had lunch." or user == "Yes, I had dinner." or user == "Yes, I had breakfast."):
        txt.insert(END, "\n" + "Bot -> I hope it was balanced.\nBot -> How is your family doing?")

    elif (user == "They are doing well."):
        txt.insert(END, "\n" + "Bot -> Glad they are doing well.")

    elif (user == "They aren't doing well."):
        txt.insert(END, "\n" + "Bot -> I'm sorry to hear that. I hope it gets better./nBot -> Did you take your daily medication?")

    elif (user == "Yes, I did."):
        txt.insert(END, "\n" + "Bot -> Good")

    elif (user == "No, I didn't."):
        txt.insert(END, "\n" + "Bot -> You should")

    elif (user == "Play a math game"):
        txt.insert(END, "\n" + "Bot -> Addition and Subtraction or Multiplication and Division?")
    #Use random values instead of preset number
    elif (user == "Addition and Subtraction"):
        txt.insert(END, "\n" + "Bot -> What is 27+48?\n What is 56-39?\n What is 386+48?")

    elif (user == "How are you"):
        txt.insert(END, "\n" + "Bot -> Fine! and you?")
 
    elif (user == "Fine" or user == "I am good" or user == "I am doing good"):
        txt.insert(END, "\n" + "Bot -> Great! how can I help you.")
 
    elif (user == "Thanks" or user == "Thank you" or user == "Thank You very much"):
        txt.insert(END, "\n" + "Bot -> My pleasure!")
 
    elif (user == "Tell me a joke" or user == "Tell me something funny" or user == "Crack a funny line"):
        txt.insert(
            END, "\n" + "Bot -> " + Jokes)
 
    elif (user == "Goodbye" or user == "See you later" or user == "Bye"):
        txt.insert(END, "\n" + "Bot -> Have a nice day!")

    elif (user == "I need Help" or user == "Help me" or user == "Bye"):
        txt.insert(END, "\n" + "I can tell you a joke, talk to you, or practice math with you.")
 
    else:
        txt.insert(END, "\n" + "Bot -> Sorry! I didn't understand that")
 
    e.delete(0, END)
 
 
Label1 = Label(root, bg=BG_COLOR, fg=TEXT_COLOR, text="Welcome", font=FONT_BOLD, pady=10, width=20, height=1).grid(
    row=0)
Label2 = Label(root, bg=BG_COLOR, fg=TEXT_COLOR, text="Send 'Hello' to start\n \n ↓Use the commands below↓\n \n 😜'Tell me a joke'😜\n \n 🎮Games🎮\n ➕'Play a math game'➖ \n 📖'Play a reading game'📖\n 📝'Play a spelling game'📝\n 🔡'Play a matching game'🔡\n 🧠'Play a logic game'🧠\n \n \n \n ", font=FONT, pady=10, width=22, height=23).grid(
    row=1,column=2)


 
 
txt = Text(root, bg=BG_COLOR, fg=TEXT_COLOR, font=FONT, width=60)
txt.grid(row=1, column=0, columnspan=2)
 
scrollbar = Scrollbar(txt)
scrollbar.place(relheight=1, relx=0.974)
 
e = Entry(root, bg="#ffffff", fg=TEXT_COLOR, font=FONT, width=55)
e.grid(row=2, column=0)
 
send = Button(root, text="Send", fg=BG_COLOR, font=FONT_BOLD, bg=BG_GRAY,
              command=send).grid(row=2, column=1)
 
root.mainloop()